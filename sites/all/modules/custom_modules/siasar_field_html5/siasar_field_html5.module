<?php

/**
 * Implements hook_field_widget_info().
 */

function siasar_field_html5_field_widget_info() {
  return array(
    'siasar_field_html5_number' => array(
      'label' => t('HTML5 Number'),
      'description' => t('Custom HTML5 number field widget for numeric fields.'),
      'field types' => array('number_integer', 'number_float', 'number_decimal'),
    ),
  );
}

/*
