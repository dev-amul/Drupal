 * para ser usada en los formularios y que aplique a campos numÃ©ricos
 */
function siasar_field_html5_field_widget_form(&$form, &$form_state, $field, $instance, $langcode, $items, $delta, $element) {
  $field_name = $field['field_name'];
  $element += array(
    '#type'=> 'numberfield',
    '#size' => 20,
    '#default_value'=> isset($items[$delta]['number']) ? $items[$delta]['number'] : '',
  );
  return $element;
}
